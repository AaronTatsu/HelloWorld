<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bodyCrawlsParentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_white"
    tools:context=".Exercise.BodyExercise_3">

    <RelativeLayout
        android:id="@+id/UpBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp">

        <ImageView
            android:id="@+id/back_pressed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:src="@drawable/back_arrow" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/UpBar">
        <TextView
            android:id="@+id/bodyCrawlsTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Bear Crawls"
            android:textAllCaps="true"
            android:textSize="26sp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/ARbtn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/eye"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:background="@drawable/round_back_exercise_end_layout"/>
        <TextView
            android:id="@+id/bodyCrawlsTV2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:text="View in Video"
            android:textSize="14sp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="-25dp"/>
        <ImageView
            android:id="@+id/textbtn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@drawable/textexe"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_back_exercise_end_layout"/>
        <TextView
            android:id="@+id/bodyCrawlsTV3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:text="View in Text"
            android:textSize="14sp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="-25dp"/>

        <pl.droidsonroids.gif.GifImageView

            android:layout_width="370dp"
            android:layout_height="200dp"
            android:src="@drawable/bear_crawls"
            android:layout_marginTop="20dp"/>

        <SeekBar
            android:id="@+id/timer_sb"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/timer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1:00"
            android:textSize="60sp" />
        <Button
            android:id="@+id/start_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="START"
            android:textSize="14sp"
            android:onClick="start_timer" />
    </LinearLayout>

</RelativeLayout>